---
import { Icon } from 'astro-icon/components';

interface Props {
  prevUrl: string;
  nextUrl: string;
  prevText?: string;
  nextText?: string;
}

const { prevUrl, nextUrl, prevText = 'Newer projects', nextText = 'Older projects' } = Astro.props;
---
{
  (prevUrl || nextUrl) && (
    <div class="container flex">
      <div class="flex flex-row mx-auto container justify-between">
        <a
          href={prevUrl}
          class={`btn px-2 font-medium text-muted dark:text-slate-300 hover:text-primary dark:hover:text-gray-200 ${
            !prevUrl ? 'invisible' : ''
          }`}
        >
          <div class="flex flex-row align-middle">
            <Icon name="tabler:arrow-left" class="w-6 h-6" />
            <p class="ml-2">{prevText}</p>
          </div>
        </a>
        <a
          href={nextUrl}
          class={`btn px-2 font-medium text-muted dark:text-slate-300 hover:text-primary dark:hover:text-gray-200 ${
            !nextUrl ? 'invisible' : ''
          }`}
        >
          <div class="flex flex-row align-middle">
            <span class="mr-2">{nextText}</span>
            <Icon name="tabler:arrow-right" class="w-6 h-6" />
          </div>
        </a>
      </div>
    </div>
  )
} 