---
import PostTags from '~/components/blog/Tags.astro';
import SocialShare from '~/components/common/SocialShare.astro';
import ProjectHeader from '~/components/ProjectComponents/ProjectHeader.astro';
// Import left in for use in MDX content via slot
// eslint-disable-next-line no-unused-vars
import ProjectSandbox from '~/components/ProjectComponents/ProjectSandbox.astro';

import type { Post } from '~/types';

// Update Post type with missing properties from linter errors
export interface ExtendedPost extends Post {
  technologies?: string[];
  projectUrl?: string;
  repoUrl?: string;
}

export interface Props {
  post: ExtendedPost;
  url: string | URL;
}

const { post, url } = Astro.props;
---

<section class="mx-auto">
  <article class="max-w-screen-2xl mx-auto">
    
    <!-- <ProjectHeader 
      title={post.title}
      technologies={post.technologies}
      liveUrl={post.projectUrl}
      githubUrl={post.repoUrl}
      publishDate={post.publishDate}
      author={post.author?.toString()}
      readingTime={post.readingTime?.toString()}
      image={post.image}
      description={post.excerpt}
    /> -->
    
    <div class="mx-auto px-6 sm:px-6">
      <slot />
    </div>
    <div class="mx-auto px-6 sm:px-6 mt-8 flex justify-between flex-col sm:flex-row">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
      <SocialShare url={url} text={post.title} class="mt-5 sm:mt-1 align-middle" />
    </div>
  </article>
</section>

<style>
  h1{
    line-height: 1.2;
    text-align: center;
    text-wrap: balance;
  }
</style>



